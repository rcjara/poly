    li
      font-size 1.5em
      overflow hidden
      display table

      &.bookEntry
        border-bottom 1px solid lighten(#E7EFF2, 35%)
        width 100%
        transition background $time*2 ease-in-out, opacity $time*2 ease-in-out

        &:last-of-type
          border-radius 0 0 2*$radius 2*$radius

        &:hover
          opacity 1
          background #fff
          border-bottom-color lighten(#E7EFF2, 55%)

        a
          display inline-block
          width 100%
          height 100%
          float left

          img
            float left
            margin 30px

          p
            margin 15px 0 0 0
            float left
            overflow hidden
            text-overflow ellipsis
            white-space nowrap

          section
            // height 100%
            display inline-block
            width 70%

            &.info
              height 100px
              width 100%
              float left
              display inline-block

              .banner
                float left
                margin 0
                height 100px
                width 100px
                display inline-block
                display none
                overflow hidden
                background #62eaba
                background -moz-linear-gradient(-45deg, #62eaba 0%, #24c9b3 100%)
                background -webkit-linear-gradient(-45deg, #62eaba 0%,#24c9b3 100%)
                background linear-gradient(135deg, #62eaba 0%,#24c9b3 100%)
                position relative

                img
                  margin 0
                  position absolute
                  left 50%
                  transform translateX(-50%)
                  min-width 100px
                  height 100px

              .author
                float right
                font-size .5em
                color #aaa
                font-weight 100
                padding 0 15px

              section
                margin-left 18px

              button
                &.favorite
                  float right
                  padding 4px 0 0 0
                  margin 14px 20px 30px 20px
                  border none
                  cursor pointer
                  background transparent
                  border-radius 100%
                  outline none

                  &:active
                    padding-top 9px

                  img.star
                    height 25px
                    float left
                    margin 0
                    padding 0

            &.details
              width 70%
              float left
              // margin-left 10px

              .language
                float left
                font-weight 100

                p
                  text-align center
                  padding 0
                  font-size .7em
                  line-height 1.9
                  margin 0

              img
                float left
                margin 6px 10px
                padding 4px

  .newBook
    position fixed
    bottom .5em
    left 50%
    margin-left -30px
    materialButton()